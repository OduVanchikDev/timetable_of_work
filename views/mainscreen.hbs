
  {{#if flagSudo}}

<div class="header">
  <h3>Менеджер персонала</h3>
</div>

<div class="box_filter">
  <form action="/user/new" method="get">
     <button id="new_person">Новый сотрудник</button>
  </form>

  {{/if}}
  {{!-- <label for="filter">Фильтр</label> --}}
  <select id="filter">
    <option value="Фильтр">Фильтр</option>
    <option value="Все">Все</option>
    <option value="Повар">Повар</option>
    <option value="Официант">Официант</option>
    <option value="Кондитер">Кондитер</option>
  </select>
  <ul id="users">
    {{#each this.users}}
    <li>{{userName}}</li>
    {{/each}}
  </ul>
</div>

<div class="changer">
    <label for="">Месяц</label>
    <select>
      <option value="Повара">Январь</option>
      <option value="Официанты">Февраль</option>
      <option value="Кондитер">Март</option>
    </select>

    <label for="">Ресторан</label>
    <select>
      <option value="Повара">Ресторан-1</option>
      <option value="Официанты">Ресторан-2</option>
      <option value="Кондитер">Ресторан-3</option>
    </select>
    <form action="/personalCard">
      <button name="user" id="{{this.person._id}}">{{this.person.userName}}</button>
    </form>
  </div>

</div>

